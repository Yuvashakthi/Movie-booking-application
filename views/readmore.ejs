<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/header.ejs') %>


<body>

  
  <%- include('./partials/nav.ejs') %>


  <div class="hero">

    <img src="/images/download.jpg" alt="Hero Image">
    <div class="hero-overlay"></div>

  </div>

  
  <div class="container" style="margin-top: 20px;">

    <div class="row justify-content-center">

      <div class="col-md-6">

        <div class="details-container">

          <h2>Title: <%= movie.title %></h2>
          <p><strong>Director:</strong> <%= movie.director %></p>
          <p><strong>Release Year:</strong> <%= movie.releaseYear %></p>
          <p><strong>Genre:</strong> <%= movie.genre %></p>
          <img src="<%= movie.image %>" alt="Details Image" class="details-img">
          <p><%= movie.description %></p>

          <div class="details-btn">

            <a href="/update/<%= movie.id %>" class="btn btn-primary">Update</a>
            <a href="/delete/<%= movie.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</a>

          </div>

          </div>

        </div>

      </div>

    </div>

  </div>

 
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

  
</body>

</html>
